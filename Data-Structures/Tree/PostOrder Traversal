class Solution {
    public List<Integer> postorderTraversal(TreeNode root) {
        Stack<TreeNode> stack = new Stack<>();
        List<Integer> output = new LinkedList<>();
        
        if(root == null){
             return output;
        }
        
        stack.add(root);
        
        while(!stack.isEmpty()){
            TreeNode top = stack.pop();
            
            output.add(0, top.val);
            
            if(top.right != null){
                stack.push(top.right);
            }
            
            if(top.left != null){
                stack.push(top.left);
            }
        }
        
        return output;
    }
}
